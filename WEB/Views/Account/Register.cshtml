@model WEB.ViewModel.RegisterVM  

@{
	//,
	ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>تسجيل الدخول</title>
	 <link rel="stylesheet" href="~/css/login.css"> 
	 <link rel="stylesheet" href="~/css/pdf.css"> 
	 <link rel="stylesheet" href="~/css/edit-prof.css"> 
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Jomhuria&family=Noto+Sans+Arabic:wght@200;300;400;500;600&display=swap" rel="stylesheet">
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="~/css/all.min.css">
	<link rel="stylesheet" href="~/css/bootstrap.min.css">
</head>
<body>
<div class="parent-container-login">
	<img src="~/assets/images/Front/photo-login.jpg" alt="photo" />
	<section class="container-login">

		<!-- form signup -->
		<div class="form-parent-signup">
			<form asp-action="Register" method="post">
				<h1>انشاء حساب</h1>
				<div asp-validation-summary="All" class="text-danger"></div>
				<div class="input-box">
					<input type="text" asp-for="@Model.Name" name="NewUser.Name" placeholder="الاسم " required>
					<span asp-validation-for="@Model.Name" class="text-danger"></span>
					<i class="fa-regular fa-envelope"></i>
				</div>
				<div class="input-box">
					<input type="text" asp-for="@Model.Phone" name="NewUser.Phone" id="number" placeholder="رقم التليفون" required>
					<span asp-validation-for="@Model.Phone" class="text-danger"></span>

					<i class="fa-solid fa-mobile-screen"></i>
				</div>
				<div class="input-box">
					<input type="password" asp-for="@Model.Password" name="NewUser.Password" id="write" placeholder="كلمة المرور" required>
					<span asp-validation-for="@Model.Password" class="text-danger"></span>

					<i class="fa-solid fa-lock"></i>
					<i class="fa-regular fa-eye-slash"></i>

				</div>

				<div class="input-box">
					<input type="password" id="confirm" asp-for="@Model.Password2" name="NewUser.Password2" placeholder="تأكيد كلمة المرور" required>
					<span asp-validation-for="@Model.Password2" class="text-danger"></span>
					<i class="fa-solid fa-lock"></i>
					<i class="fa-regular fa-eye-slash"></i>
				</div>


				<div class="sele">
					<select id="degree" asp-for="@Model.Degree" aria-placeholder="bob" class="form-select my-2 mx-auto border  shadow-none p-2" name="NewUser.degree" asp-items="Html.GetEnumSelectList<Alldegrees>()" style="padding: 2px; text-align: center; ">
						<option value="" disabled selected hidden>أختر الصف</option>
					</select>
					<span asp-validation-for="@Model.Degree" class="text-danger"></span>

				</div>
				<button type="submit" class="loginNow">إنشاء حساب</button>

				<div class="sign">
					لديك حساب بالفعل؟ <a asp-action="login" asp-controller="Account" id="Login">تسجيل الدخول </a>
				</div>

			</form>
		</div>

	</section>
</div>
<script src="~/js/login.js"></script>


</body>
</html>
