@{
	ViewData["Title"] = "TakeQuiz";
	DateTime endTime = (DateTime)ViewBag.EndTime;
	TimeSpan remainingTime = endTime - DateTime.Now;
	// No Change?
}

@model QuizTable

<head>
	<meta charset="UTF-8">
	<!-- <link rel="stylesheet" href="css/edit.css"> -->
	<link rel="stylesheet" href="~/css/pull.css">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
	<link rel="stylesheet" href="~/css/all.min.css">
	<link rel="stylesheet" href="~/css/bootstrap.min.css">
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Noto+Kufi+Arabic:wght@200;300;400;500;600&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="~/css/bootstrap.min.css">
	<link rel="stylesheet" href="~/css/bootstrap.min.css.map">
	<title>@Model.Title</title>
</head>
<div class="loader">
	<div class="parent-load">
		<svg xml:space="preserve" viewBox="0 0 80 80" height="80px" width="80px" y="0px" x="0px" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns="http://www.w3.org/2000/svg" id="Layer_1" version="1.1" class="clock">  <image href="data:image/png;base64," y="0" x="0" height="80" width="80" id="image0"></image>
			</svg>
		<div class="stage"></div>
		<div class="hold">
			<div class="ball"></div>
		</div>
	</div>

	<div class="parent-time">
		<h1> @Model.Title</h1>
		<p> <span id="countdown">@remainingTime.ToString(@"hh\:mm\:ss")</span></p>

	</div>
</div>

@if (ViewBag.PDF != null)// Written
{


		<form class="container py-3" method="post" asp-action="SubmitPDFQuiz" enctype="multipart/form-data">
			<div class="pdf-container container" style="width: 100%; height: 100vh;">
				<embed src="@ViewBag.PDF" type="application/pdf" width="100%" height="100%">
			</div>

			<input type="file" asp-for="@Model.File" name="File" class="form-control" placeholder="ve" accept="application/pdf">
			<input type="text" asp-for="@Model.Title" name="Title" class="rounded-2 form-control" placeholder="File Name" hidden>
			<input type="text" asp-for="@Model.Description" name="Description" class="rounded-2 form-control" placeholder="File Description" hidden>
			<input asp-for="@Model.Id" name="Id" class="rounded-2 form-control" placeholder="File Id" hidden>

			<div class="form-group">

				<select class="form-select" hidden asp-for="Alldegrees" name="Alldegrees" asp-items="Html.GetEnumSelectList<Alldegrees>()"
						aria-placeholder="bob">
					<option value="" disabled selected hidden>Select Degree</option>
				</select>
				<span asp-validation-for="Alldegrees" class="text-danger"></span>
			</div>
			<div class="form-group">

				<select class="form-select" hidden asp-for="Semester" name="Semester" asp-items="Html.GetEnumSelectList<Semester>()"
						aria-placeholder="bob">
					<option value="" disabled selected hidden>Select Semester</option>
				</select>
				<span asp-validation-for="Semester" class="text-danger"></span>
			</div>

		<button id="saveButton" type="submit" class="btn savebtn border border-3 bg-body-secondary">Save</button>
			<br />

		</form>


		<br>

	<br />


}
else
{
	<form method="post" asp-action ="SubmitQuiz">

		@for (int i = 0; i < Model.Questions.Count; i++)
		{
			<div class="pre">
				<p>@Model.Questions[i].Text</p>
				<div class="pre">
					<label>
						@for (int j = 0; j < Model.Questions[i].Options.Count; j++)
						{
							<input type="radio" name="selectedAnswers[@i]" value="@j" /> @Model.Questions[i].Options[j].Text

							<br />
						}

					</label>
					<br>
				</div>

			</div>

		}
		<input type="hidden" name="quizId" value="@Model.Id" />

		<div class="submit text-center">
			<button type="submit" asp-route-id="@ViewBag.id" asp-action="SubmitQuiz">Submit</button>
		</div>

	</form>
}




<script>
	// Function to set a cookie
	function setCookie(name, value, days) {
		var expires = "";
		if (days) {
			var date = new Date();
			date.setTime(date.getTime() + (days * 24 * 60 * 60 * 1000));
			expires = "; expires=" + date.toUTCString();
		}
		document.cookie = name + "=" + (value || "") + expires + "; path=/";
	}

	// Function to get a cookie value
	function getCookie(name) {
		var nameEQ = name + "=";
		var ca = document.cookie.split(';');
		for (var i = 0; i < ca.length; i++) {
			var c = ca[i];
			while (c.charAt(0) == ' ') c = c.substring(1, c.length);
			if (c.indexOf(nameEQ) == 0) return c.substring(nameEQ.length, c.length);
		}
		return null;
	}

	// Countdown timer
	function updateCountdown() {
		var now = new Date();
		var endTime = new Date('@endTime');
		var remainingTime = endTime - now;

		if (remainingTime <= 0) {
			// Time is up, submit the form
			document.forms[0].submit();
		} else {
			// Update the countdown display
			var hours = Math.floor(remainingTime / 3600000);
			var minutes = Math.floor((remainingTime % 3600000) / 60000);
			var seconds = Math.floor((remainingTime % 60000) / 1000);
			document.getElementById('countdown').textContent = hours + ':' + minutes + ':' + seconds;

			// Save remaining time to a cookie
			setCookie('remainingTime', remainingTime, 1);
		}
	}

	// Check if remaining time is stored in a cookie
	var storedRemainingTime = getCookie('remainingTime');
	if (storedRemainingTime) {
		// Use stored remaining time if available
		var now = new Date();
		var endTime = new Date('@endTime');
		var storedEndTime = new Date(now.getTime() + parseInt(storedRemainingTime));
		if (storedEndTime <= endTime) {
			// Update the remaining time with the stored value
			endTime = storedEndTime;
		}
	}

	// Update the countdown every second
	setInterval(updateCountdown, 1000);
</script>