
@{
    ViewData["Title"] = "FilePdf";
}




<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/pull.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">  
    <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Noto+Kufi+Arabic:wght@200;300;400;500;600&display=swap" rel="stylesheet">

    <title>PDF</title>

    <style>
        .pdf-container {
            width: 100%;
            height: 100vh;
        }
    
        media (max-width: 992px) {
            .pdf-container {
                height: 100%;
            }
        }
    
        media (max-width: 576px) {
            .pdf-container {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    
    <div class="pdf-container container" style="width: 100%; height: 100vh;">
        <embed src="@Model.Pdf_Path" type="application/pdf" width="100%" height="100%" />
    </div>

    

    <script src="~/js/bootstrap.bundle.min.js.map"></script>
</body>
